{
    "$id": "https://raw.githubusercontent.com/mitre-attack/attack-data-model/main/schema/sdos/tactic.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Tactic",
    "description": "Defines a tactic within the ATT&CK framework.",
    "type": "object",
    "allOf": [
        {
            "$ref": "http://raw.githubusercontent.com/oasis-open/cti-stix2-json-schemas/stix2.1/schemas/common/core.json"
        },
        {
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "x-mitre-tactic"
                    ],
                    "description": "The type of this object, which MUST be the literal `x-mitre-tactic`."
                },
                "x_mitre_shortname": {
                    "type": "string",
                    "description": "A short, url-friendly identifier used to map techniques into the tactic. Corresponds to `kill_chain_phases.phase_name` of the techniques in the tactic."
                }
            },
            "required": [
                "type",
                "x_mitre_shortname"
            ]
        }
    ]
}