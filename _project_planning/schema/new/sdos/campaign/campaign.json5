{
    "$id": "https://raw.githubusercontent.com/mitre-attack/attack-data-model/main/schema/sdos/campaign.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ATT&CK Campaign",
    "description": "An ATT&CK Campaign is a grouping of adversary behavior that describes a set of malicious activities or attacks that occur over a period of time against a specific set of targets. It includes additional citation fields specific to the ATT&CK framework for detailing when the campaign was first and last reported.",
    "type": "object",
    "allOf": [
        {
            "$ref": "http://raw.githubusercontent.com/oasis-open/cti-stix2-json-schemas/stix2.1/schemas/sdos/campaign.json"
        }
    ],
    "properties": {
        "x_mitre_first_seen_citation": {
            "$ref": "https://raw.githubusercontent.com/mitre-attack/attack-data-model/main/schema/common/extensions/x_mitre_first_seen_citation.json"
        },
        "x_mitre_last_seen_citation": {
            "$ref": "https://raw.githubusercontent.com/mitre-attack/attack-data-model/main/schema/common/extensions/x_mitre_last_seen_citation.json"
        }
    },
    "not": {
        "required": [
            "x_mitre_contributors"
        ]
    },
    "required": [
        "aliases": {
            // OASIS campaign.json
            "$comment": "Aliases are always included in ATT&CK Campaigns, but they are not explicitly required."
        },
        "created", // OASIS campaign.json (required)
        "created_by_ref", // OASIS core.json 
        "description", // OASIS campaign.json
        "first_seen", // OASIS campaign.json 
        "id", // OASIS campaign.json (required)
        "last_seen", // OASIS campaign.json
        "modified", // OASIS core.json (required)
        "name", // OASIS campaign.json (required)
        "object_marking_refs", // OASIS core.json
        "revoked", // OASIS core.json
        "spec_version", // OASIS core.json (required)
        "type", // OASIS core.json (required)
        "x_mitre_attack_spec_version", // ATT&CK core.json (required)
        "x_mitre_deprecated",
        "x_mitre_domains",
        "x_mitre_first_seen_citation",
        "x_mitre_last_seen_citation",
        "x_mitre_modified_by_ref",
        "x_mitre_version"
    ]
}