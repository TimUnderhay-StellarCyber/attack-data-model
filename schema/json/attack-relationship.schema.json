{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "relationship_type": {
      "type": "string",
      "enum": [
        "uses",
        "variant-of",
        "mitigates",
        "targets",
        "exploits",
        "precedes",
        "associated-with"
      ],
      "description": "The type of relationship between two objects."
    },
    "source_ref": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]+$",
      "description": "The identifier of the source object in the relationship."
    },
    "target_ref": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]+$",
      "description": "The identifier of the target object in the relationship."
    }
  },
  "required": [
    "relationship_type",
    "source_ref",
    "target_ref"
  ]
}
