{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for ATT&CK domain STIX bundles",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "bundle"
      ],
      "description": "The type property identifies the type of object. The value of this property MUST be bundle."
    },
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]+$",
      "description": "An identifier for this Bundle."
    },
    "spec_version": {
      "type": "string",
      "enum": [
        "2.0"
      ],
      "description": "The version of the STIX specification used to represent the content in this Bundle."
    },
    "objects": {
      "type": "array",
      "description": "List of ATT&CK STIX SDOs",
      "items": {
        "oneOf": [
          {"$ref": "attack-mitigation.schema.json"},
          {"$ref": "attack-group.schema.json"}
        ]
      }
  }
  },
  "required": [
    "type",
    "id",
    "spec_version",
    "objects"
  ]
}
