{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]+$",
      "description": "A unique identifier for the technique."
    },
    "type": {
      "type": "string",
      "enum": [
        "attack-pattern"
      ],
      "description": "The type of object, always 'attack-pattern' for a MITRE ATT&CK technique."
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "The date and time the technique was created."
    },
    "created_by_ref": {
      // TODO: This field attributes 100% coverage to the same identify (identity--c78cb6e5-0c4b-4611-8297-d1b8b55e40b5). Discuss with team on whether this field should be converted to a static or enum.
      "type": "string",
      "description": "A unique identifier for the MITRE ATT&CK object that originated this object"
    },
    "modified": {
      "type": "string",
      "format": "date-time",
      "description": "The date and time the technique was last modified."
    },
    "name": {
      "type": "string",
      "description": "The name of the technique."
    },
    "description": {
      "type": "string",
      "description": "A brief description of the technique and what it entails."
    },
    "revoked": {
      "type": "boolean",
      "description": "Specifies whether the technique is revoked or not."
    },
    "external_references": {
      "$ref": "subschemas/external-references/external-references.schema.json",
    },
    "kill_chain_phases": {
      "$ref": "subschemas/kill-chain-phases/kill_chain_phases.schema.json",
    },
    "x_mitre_version": {
      "type": "string",
      "description": "The version of the MITRE ATT&CK framework that the technique belongs to."
    },
    "x_mitre_deprecated": {
      "type": "boolean",
      "description": "Indicates whether the technique has been deprecated and is no longer in use."
    },
    "x_mitre_aliases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "A list of alternate names or aliases for the technique."
    },
    "x_mitre_permissions_required": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "A list of permissions required for the technique to be executed."
    },
    "x_mitre_detection": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "A list of methods for detecting the technique."
    },
    "x_mitre_mitigation": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "A list of methods for mitigating the technique."
    },
    "x_mitre_data_sources": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "A list of data sources that can be used to detect the technique."
    },
    "x_mitre_platforms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "A list of platforms (e.g., Windows, Linux, MacOS, etc.) that the technique can be used on."
    }
  },
  "required": [
    "created",
    "created_by_ref",
    "description",
    "external_references",
    "id",
    "kill_chain_phases",
    "modified",
    "name",
    "object_marking_refs",
    "spec_version",
    "type",
    "x_mitre_version"
  ]
}

