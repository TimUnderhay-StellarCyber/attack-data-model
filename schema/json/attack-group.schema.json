{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for ATT&CK Groups",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "spec_version",
    "objects"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]+$",
      "description": "(STIX v2.0 required common property) A unique identifier for the group."
    },
    "type": {
      "type": "string",
      "enum": [
        "bundle"
      ],
      "description": "(STIX v2.0 required) The type of object, 'group' is type 'bundle'"
    },
    "spec_version": {
      "type": "string",
      "enum": [
        "2.0"
      ],
      "description": "The version of the STIX specification used to represent the content in this Bundle."
    },
    "objects": {
      "type": "array",
          "items": [
            {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "id",
                "type",
                "created",
                "modified",
                "name",
                "description"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^[a-zA-Z0-9-]+$",
                  "description": "A unique identifier for the intrusion set."
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "intrusion-set"
                  ],
                  "description": "The type of object, always 'intrusion-set' for a MITRE ATT&CK intrusion set."
                },
                "created": {
                  "type": "string",
                  "format": "date-time",
                  "description": "The date and time the intrusion set was created."
                },
                "modified": {
                  "type": "string",
                  "format": "date-time",
                  "description": "The date and time the intrusion set was last modified."
                },
                "name": {
                  "type": "string",
                  "description": "The name of the intrusion set."
                },
                "description": {
                  "type": "string",
                  "description": "A brief description of the intrusion set and what it entails."
                }
              }
            }
          ]
        }
      }
  }
